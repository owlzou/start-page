@import 'drawer.styl'
@import 'search.styl'
@import 'media.styl'
@import 'nav.styl'

:root {
    --container-width 40rem
    --search-border-radius 2rem
    --search-font 1.2rem
    --search-padding 0.9rem
    --search-engine-color #909090
    --search-tri 0.7rem
    --color-blackbg rgba(0, 0, 0, 0.5)
    --color-main #ffeeaa
    --color-reverse #fff
    --color-reverse-sub #404040
}

body {
    margin 0
    overflow-y hidden
}

button {
    border none
    background-color transparent
    cursor pointer
}

ul {
    margin 0
    padding 0
}

li {
    list-style-type none
}

.bg {
    position fixed
    top 0
    bottom 0
    margin 0
    background-size cover
    width 100%
}

.container {
    margin 0 auto
    position relative
    max-width var(--container-width)
}

/* -----------------设置按钮----------------- */
.gear {
    position fixed
    top 0
    left 0
    margin 1rem
    padding 0
    color var(--color-reverse-sub)

    svg:hover {
        transition color 0.5s
        animation turn 1s linear infinite
        color var(--color-reverse)
    }
}

.page {
    height 100vh
    position relative
}

.main {
    padding-top 20rem
}

/* -----------------下拉箭头----------------- */
.button-arrow {
    position absolute
    bottom 2rem
    color var(--color-reverse)
    transform translateX(-50%)
    margin-left 50%
    cursor pointer
    opacity 0.5
    transition color 0.5s

    svg {
        width 40px
        height @width
    }
}

.to-nav:hover {
    opacity 1
    animation tonav 1s ease-out infinite
}

.to-search:hover {
    opacity 1
    animation tosearch 1s ease-out infinite
}

/* -----------------动画----------------- */
@keyframes turn {
    0% {
        transform rotate(0deg)
    }

    25% {
        transform rotate(90deg)
    }

    50% {
        transform rotate(180deg)
    }

    75% {
        transform rotate(270deg)
    }

    100% {
        transform rotate(360deg)
    }
}

@keyframes tonav {
    0% {
        bottom 2rem
    }

    100% {
        bottom 1rem
    }
}

@keyframes tosearch {
    0% {
        bottom 1rem
    }

    100% {
        bottom 2rem
    }
}

/* -----------------时间----------------- */
.timebar {
    padding 1rem
    margin-top 5rem
    width 17%
    min-width 15rem
    color var(--color-reverse)
    font-size 1rem
    user-select none
    position fixed
    margin-left 50%
    transform translateX(-50%)

    &__time, &__date, &__week {
        width 100%
        text-align justify
        text-align-last justify
        font-family serif
    }

    &__hr {
        background var(--color-reverse)
        height 2px
    }
}
