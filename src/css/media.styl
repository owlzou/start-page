
/* -----------------响应式----------------- */
/* 小屏幕 */
@media screen and (max-width 750px) {
    .timebar {
        min-width 14rem

        &__time {
            font-size 3em
        }

        &__date {
            font-size 1.3em
        }

        &__week {
            font-size 1.8em
        }
    }

    .searchbar-list ul {
        grid-template-columns 1fr 1fr 1fr 1fr
    }

    .nav ul {
        grid-template-columns 1fr 1fr
    }

    .main {
        padding-top 15rem
    }
}

/* 大屏幕 */
@media screen and (min-width 750px) {
    .timebar {
        min-width 20rem

        &__time {
            font-size 5em
        }

        &__date {
            font-size 2em
        }

        &__week {
            font-size 3em
        }
    }

    .searchbar-list ul {
        grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr
    }

    .nav ul {
        grid-template-columns 1fr 1fr 1fr 1fr
    }

    .main {
        padding-top 20rem
    }
}