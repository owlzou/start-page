.page-nav {
    bottom -300px
}

.nav {
    padding 0.5rem 1rem

    ul {
        display grid
        width 100%
        gap 1rem
    }

    li a {
        color #fff
        text-decoration none
        cursor pointer
        padding 0.3rem 0.5rem
        background #000
        display flex
        align-items center
        justify-content center
        transition 0.2s
        color #fff
        user-select none
        height 100%

        &:active {
            background #888
        }

        &:hover {
            background #4b9a9a
        }

        svg {
            margin-right 10px
        }
    }
}
