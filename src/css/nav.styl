.page-nav {
    bottom -300px
}

.nav {
    padding 0.5rem 1rem

    ul {
        display grid
        width 100%
        gap 1rem
    }

    li {
        color #fff
        background #000
        padding 0.5rem
        transition 0.2s
        display flex
        align-items center
        justify-content center
        user-select none

        &:hover {
            background #4b9a9a
        }

        &:active {
            background #888
        }

        svg {
            margin-right 10px
        }

        a {
            color #fff
            text-decoration none
            cursor pointer
        }
    }
}
