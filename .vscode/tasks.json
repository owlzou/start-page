{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build:css",
        "type": "shell",
        "command": "stylus",
        "args": [
            "src/css/main.styl",
            "-o",
            "dist/style.css",
            "--compress"
        ],
         "problemMatcher": []
    },
    {
        "label": "build:elm",
        "type": "shell",
        "command": "elm make src/Main.elm --output dist/elm.js",
         "problemMatcher": []
    },
    {
        "label": "produce",
        "type": "shell",
        "command": "node scripts/produce.js",
        "problemMatcher": []
    }
]
}
